<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome to calculator v1.0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp"
            android:textSize="25dp"
            android:gravity="center"
    />
    <EditText
            android:id="@+id/first_number"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="20dp"
            android:hint="first"
            android:textSize="25dp"
    />
    <EditText
            android:id="@+id/second_number"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/first_number"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="20dp"
            android:hint="second"
            android:textSize="25dp"
    />
    <Button
            android:id="@+id/btn_sum"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/first_number"
            app:layout_constraintStart_toStartOf="@id/first_number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@id/first_number"
            android:text="+"
            android:textSize="30dp"
    />
    <Button
            android:id="@+id/btn_sub"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/btn_sum"
            app:layout_constraintStart_toStartOf="@id/first_number"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="-"
            android:textSize="30dp"
    />
    <Button
            android:id="@+id/btn_div"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/btn_sub"
            app:layout_constraintStart_toStartOf="@id/second_number"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="/"
            android:textSize="30dp"
    />
    <Button
            android:id="@+id/btn_multi"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/btn_div"
            app:layout_constraintStart_toStartOf="@id/second_number"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="*"
            android:textSize="30dp"
    />
    <TextView
            android:id="@+id/result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/first_number"
            app:layout_constraintBottom_toTopOf="@id/second_number"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_sub"
            android:layout_marginLeft="30dp"
            android:hint="result"
            android:textSize="25dp"
    />
    <TextView
            android:id="@+id/reserv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="All rights reserved Â©"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="20dp"
            android:textSize="25dp"
            android:gravity="center"
    />
</android.support.constraint.ConstraintLayout>